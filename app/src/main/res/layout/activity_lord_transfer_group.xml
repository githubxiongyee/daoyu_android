<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_333333"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".module.group.activity.StartGroupChatActivity">

    <include
        android:id="@+id/include"
        layout="@layout/common_setting_header" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F2F2F2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F2F2F2"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_common_dialog"
                android:drawableLeft="@drawable/chat_details_setting_search"
                android:drawablePadding="@dimen/dp_15"
                android:hint="搜索备注名、昵称"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/sp_15" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:overScrollMode="never"
                android:scrollbars="none" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>