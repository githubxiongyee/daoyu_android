<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:psd="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F2F2F2"
    tools:context=".module.system.activity.SettingPaymentPwdActivity">

    <TextView
        android:id="@+id/tv_input_pwd_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        android:text="输入当前密码"
        android:textColor="@color/color_808080"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.daoyu.chat.view.PayPsdInputView
        android:id="@+id/psd_view"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_45"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_45"
        app:layout_constraintTop_toBottomOf="@id/tv_input_pwd_text"
        psd:maxCount="6"
        psd:psdType="weChat" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:text="忘记密码"
        android:textColor="@color/color_1A1A1A"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/psd_view" />
</android.support.constraint.ConstraintLayout>