<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <com.daoyu.chat.view.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_18"
        android:src="@drawable/my_user_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="啊啊吖"
        android:textColor="@color/color_1A1A1A"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toEndOf="@+id/iv_header"
        app:layout_constraintTop_toTopOf="@+id/iv_header" />

    <TextView
        android:id="@+id/tv_contact_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="我是一个可爱的皮卡丘"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="@dimen/dp_200"
        android:textColor="@color/color_808080"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toRightOf="@id/iv_header"
        app:layout_constraintBottom_toBottomOf="@id/iv_header"/>
</android.support.constraint.ConstraintLayout>