<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F2F2F2"
    tools:context=".module.chat.activity.ContactDetailMenuActivity">

    <TextView
        android:id="@+id/tv_set_remark"
        style="@style/style_text_chat_details"
        android:text="设置备注名"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_remand_to_friend"
        style="@style/style_text_chat_details"
        android:layout_marginTop="@dimen/dp_10"
        android:text="把她推荐给朋友"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_set_remark"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:text="加入黑名单"
        android:textColor="@color/color_1A1A1A"
        android:textSize="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tv_set_remark" />

    <Switch
        android:id="@+id/switch_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@id/tv_black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_black" />

    <TextView
        android:id="@+id/tv_delete_friend"
        style="@style/style_btn_color_e94e46"
        android:text="删除好友"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_black" />

</android.support.constraint.ConstraintLayout>