<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_first_letter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:background="@color/color_F2F2F2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="A"
        android:textColor="@color/color_808080"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:background="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_first_letter">


        <com.daoyu.chat.view.CircleImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/my_user_default" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_header"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="@dimen/dp_200"
            android:text="阿里山的姑娘阿里山的姑娘阿里山的姑娘阿里山的姑娘阿里山的姑娘"
            android:textColor="@color/color_1A1A1A"
            android:textSize="@dimen/sp_16" />

        <CheckBox
            android:id="@+id/cb_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:button="@drawable/selector_checked_lord"
            android:clickable="false" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>