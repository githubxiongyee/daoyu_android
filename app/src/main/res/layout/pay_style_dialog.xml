<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pay_style_dialog_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/pay_style_back"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:scaleType="centerInside"
                android:src="@drawable/paymen_btn_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:text="选择优先支付方式"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_17" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_remain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_icon_remain"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:scaleType="centerInside"
                android:src="@drawable/payment_icon_balance" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@id/iv_icon_remain"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:text="余额（剩余￥0.88元）"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_17" />

            <ImageView
                android:id="@+id/iv_icon_remain_get"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_13"
                android:scaleType="centerInside"
                android:src="@drawable/payment_btn_selection"
                android:visibility="visible" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/color_F2F2F2"/>

        <RelativeLayout
            android:id="@+id/rl_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_icon_bank"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:scaleType="centerInside"
                android:src="@drawable/payment_icon__unionpay" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@id/iv_icon_bank"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:text="银联闪付"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_17" />

            <ImageView
                android:id="@+id/iv_icon_bank_get"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_13"
                android:scaleType="centerInside"
                android:src="@drawable/payment_btn_selection"
                android:visibility="gone" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/color_F2F2F2"/>
        <RelativeLayout
            android:id="@+id/rl_aliPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_icon_aliPay"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:scaleType="centerInside"
                android:src="@drawable/icon_payment_alipay" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@id/iv_icon_aliPay"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:text="支付宝支付"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_17" />

            <ImageView
                android:id="@+id/iv_icon_aliPay_get"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_13"
                android:scaleType="centerInside"
                android:src="@drawable/payment_btn_selection"
                android:visibility="gone" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/color_F2F2F2"/>
        <RelativeLayout
            android:id="@+id/rl_weChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_icon_weChat"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:scaleType="centerInside"
                android:src="@drawable/icon_payment_wechat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@id/iv_icon_weChat"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:text="微信支付"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_17" />

            <ImageView
                android:id="@+id/iv_icon_weChat_get"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_13"
                android:scaleType="centerInside"
                android:src="@drawable/payment_btn_selection"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>