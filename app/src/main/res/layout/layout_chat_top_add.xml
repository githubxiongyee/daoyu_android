<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="6.5dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:src="@drawable/up_jiantou" />

    <LinearLayout
        android:layout_width="156.55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:background="@drawable/shape_top_add"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_top_menu_scan"
            android:drawablePadding="13.5dp"
            android:gravity="center_vertical"
            android:paddingLeft="15.5dp"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:text="扫一扫"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_top_menu_create_group_chat"
            android:drawablePadding="13.5dp"
            android:gravity="center_vertical"
            android:paddingLeft="15.5dp"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:text="发起群聊"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableLeft="@drawable/chat_icon_share"
            android:drawablePadding="13.5dp"
            android:gravity="center_vertical"
            android:paddingLeft="15.5dp"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:text="分享"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

    </LinearLayout>
</LinearLayout>