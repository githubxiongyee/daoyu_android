<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F2F2F2"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".module.home.activity.ContactDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F2F2F2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/maillist_add_search"
            android:drawablePadding="@dimen/dp_18"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/dp_20"
            android:text="搜索昵称/手机号"
            android:textColor="#bababa"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_add_mobile_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@color/colorWhite"
            android:drawableTop="@drawable/maillist_icon_add_mobilephone"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:text="添加手机联系人"
            android:textColor="@color/color_1A1A1A"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_apply_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
